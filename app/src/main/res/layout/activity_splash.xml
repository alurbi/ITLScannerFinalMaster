<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity">

    <TextView
        android:id="@+id/itl"
        android:layout_width="match_parent"
        android:layout_height="102dp"
        android:layout_below="@+id/splash"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="140dp"
        android:padding="20dp"
        android:text="ITLScanner"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="16pt"
        android:textStyle="bold" />


    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="325dp"
        android:layout_height="130dp"
        android:layout_below="@+id/itl"
        android:layout_alignStart="@+id/itl"
        android:layout_alignEnd="@+id/itl"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="39dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="149dp"
        android:progressBackgroundTint="@android:color/holo_blue_dark" />

    <ImageView
        android:id="@+id/splash"
        android:layout_width="145dp"
        android:layout_height="144dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="189dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="222dp"
        app:srcCompat="@drawable/itl" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="69dp"
        app:srcCompat="@drawable/itl" />

</RelativeLayout>